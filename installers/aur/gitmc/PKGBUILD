package() {
	cd "$srcdir/GitMC.CLI"
	
	#"$pkgname-$pkgver"
	
	mkdir --parents "$pkgdir/usr/share"
	cp -r "$srcdir/GitMC.CLI/bin" -T "$pkgdir/usr/share/${pkgname}"
	
	cd $srcdir
	mkdir "$pkgdir/usr/bin"
	cp "$srcdir/gitmc.sh" -T "$pkgdir/usr/bin/${pkgname}"
	chmod +x "$pkgdir/usr/bin/${pkgname}"
	
	# chmod +x "$pkgdir/usr/share/gitmc/gitmc"
	# ln -s /usr/share/gitmc/gitmc "$pkgdir/usr/bin/${pkgname}"
	
